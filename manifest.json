{
    "name": "YouTube automated",
    "description": "Extension to control YouTube player settings and other page settings",
    "version": "1.0",
    "permissions": [],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "index.js", "themeChanger.js", "theater_mode.js"
            ]
        }
    ],
    "manifest_version": 3
}